@model PA2_2022_2C_WebAppMVC.Models.Viajes
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Step2_LocalidadOrigen";
}

<h1>Cotizar Viaje</h1>

<h4>Paso 2 - Seleccion de Localidad de @HttpContextAccessor.HttpContext.Session.GetString(Viajes.SessionNomProvinciaOrigen)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Step2_LocalidadOrigen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Localidad de Origen</label>
                <select asp-for="Origen" class="form-control" asp-items="ViewBag.Origen">
                    <option value="">Seleccione una Localidad</option>
                </select>
                <span asp-validation-for="Origen" class="text-danger"></span>
            </div>
            <div><p><br></p></div>
           <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
