@model PA2_2022_2C_WebAppMVC.Models.Viajes

@{
    ViewData["Title"] = "Step1_ProvinciaOrigen";
}

<h1>Cotizar Viaje</h1>

<h4>Paso 1 - Seleccion de Provincia de Origen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Step1_ProvinciaOrigen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Provincia de Origen</label>
                <select asp-for="ProvinciaOrigen" class="form-control" asp-items="ViewBag.ProvinciaOrigen">
                    <option value="">Seleccione una Provincia</option>
                </select>
                <span asp-validation-for="ProvinciaOrigen" class="text-danger"></span>
            </div>
            <div><p><br></p></div>
            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
